<idea-plugin>
    <id>com.dzc.note</id>
    <name>note</name>
    <version>1.0</version>
    <vendor email="dingzhencong@gmail.com" url="https://github.com/dingzhencong/note-plugin">dingzhencong</vendor>

    <description><![CDATA[
       代码阅读笔记插件,快速生成相应的MD文档,目前功能较简单，没有标题等级选择，和图片插入功能。
    ]]></description>

    <change-notes>
        <![CDATA[
      <ol>
       <p>后期将加上的功能：</p>
       <li>1.插入图片，方便阅读。</li/>
       <li>2.标题等级选择。</li/>
       <li>3.快速插入表格。</li>
     </ol>
    ]]>
    </change-notes>

    <idea-version since-build="173.0"/>

    <depends>com.intellij.modules.lang</depends>
    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="MarkBook" factoryClass="com.dzc.note.window.NoteListWindowFactory" anchor="right"
                   ></toolWindow>
    </extensions>

    <actions>
        <action id="PopupAction_ID" class="com.dzc.note.action.PopupAction" text="Mark" description="Add a note" >
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>

</idea-plugin>